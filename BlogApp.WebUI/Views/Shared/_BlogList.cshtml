@model IEnumerable<Blog>

@if (Model.Count() == 0)
{
    <div class="alert-danger">
        No Content
    </div>
}
else
{
    @foreach (var blog in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                @blog.BlogTitle
            </div>
            <img class="card-img-top" src="~/img/@blog.BlogImage" alt="@blog.BlogTitle">

            <div class="card-block">
                <h4 class="card-title">@blog.BlogTitle</h4>
                <p class="card-text">@blog.BlogDescription</p>
                <a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.BlogId" class="btn btn-primary">Blog Details</a>
            </div>
        </div>
    }
}
