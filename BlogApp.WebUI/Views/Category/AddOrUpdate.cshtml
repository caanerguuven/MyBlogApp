@model Category
@{
    ViewData["Title"] = "Add Or Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-3">
    <h2>Create</h2>
    <hr />

    <form asp-controller="Category" asp-action="AddOrUpdate" method="post">
        <input type="hidden" asp-for="CategoryId" />
        <div class="form-group">
            <label asp-for="CategoryName">Title</label>
            <input asp-for="CategoryName" class="form-control" placeholder="Type Any Category Name" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>



